<section class="status my-4">
    <div class="container mx-auto">
        <div class="w-full lg:w-2/3 mx-auto status-box py-4">
            <div class="flex item-center justify-between mb-12 mt-3">
                <h1 class="font-bold delheading">Track Delivery Status</h1>
                <h3 class="xl:bg-white py-1 rounded-full px-4 delid"><%= order.id%></h3>
                <input type="hidden" value="<%= JSON.stringify(order) %>" id="hiddeninput">
            </div>
            <ul class="py-4">
                <li class="status_line pb-16" data-status="Order_Placed"><span>Order Placed</span></li>
                <li class="status_line pb-16" data-status="confirmed"><span>Order Confirmation</span></li>
                <li class="status_line pb-16" data-status="prepared"><span>Preparation</span></li>
                <li class="status_line pb-16" data-status="delivered"><span>Out for delivery</span></li>
                <li class="status_line" data-status="completed"><span>Complete</span></li>
            </ul>
        </div>
    </div>
</section>